# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 1
}

order += "memory"
order += "cpu_usage"
order += "tztime local"
order += "battery all"

battery all {
        format = "%status %percentage"
        last_full_capacity = true
        format_down = ""
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 25
}

disk "/" {
        format = "HDD %percentage_used"
}

load {
        format = "%1min %5min %15min"
}

memory {
        format = "RAM %used used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

tztime local {
        format = "%b %d, %I:%M %p"
}

cpu_usage {
        format = "CPU %usage"
        max_threshold = 75
}

